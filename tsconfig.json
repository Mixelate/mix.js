{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "declaration": true,
        "strict": true,
        "outDir": "src",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false
    }
}
